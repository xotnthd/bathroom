<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC 
		"-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN" 
		"http://tiles.apache.org/dtds/tiles-config_2_1.dtd" >
<tiles-definitions>
	<definition name="layouts-tiles" template="/WEB-INF/jsp/common/layouts-tiles.jsp">
		<put-attribute name="header" value="/WEB-INF/jsp/common/template-header.jsp"/>
		<put-attribute name="left" value="/WEB-INF/jsp/common/template-left.jsp"/>
		<put-attribute name="body" value=""/>
		<put-attribute name="right" value="/WEB-INF/jsp/common/template-right.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/jsp/common/template-footer.jsp"/>
	</definition>
	
	<definition name="*" extends="layouts-tiles">
		<put-attribute name="body" value="/WEB-INF/jsp/{1}.jsp"/>
	</definition>
	<definition name="*/*" extends="layouts-tiles">
		<put-attribute name="body" value="/WEB-INF/jsp/{1}/{2}.jsp"/>
	</definition>
	<definition name="*/*/*" extends="layouts-tiles">
		<put-attribute name="body" value="/WEB-INF/jsp/{1}/{2}/{3}.jsp"/>
	</definition>
</tiles-definitions>